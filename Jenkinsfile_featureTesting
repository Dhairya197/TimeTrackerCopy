pipeline {
    agent any
    tools {
        maven "maven3.8.1"
    }
    stages {
        stage('Build') {
            steps {
                echo 'THis is Build step'
                git branch: 'feature1', credentialsId: 'GithubCredentials', url: 'https://github.com/sdakinedi/time-tracker.git'
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo 'This will perform unit test'
                 sh 'mvn -Dtest=TrackerTest#testAnotherEntry3 test -pl core'
				 sh 'mvn -Dtest=TrackerTest#testAnotherEntry4 test -pl core'
            }
        }
        
        stage('Results') {
            steps {
                echo 'This will show Results'
                 junit '**/*.xml'
                 
            }
        }
        

    }
}
