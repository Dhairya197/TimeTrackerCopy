pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'THis is Build step'
                git branch: 'develop', credentialsId: 'GithubCredentials', url: 'https://github.com/sdakinedi/time-tracker.git'
            }
        }
		
		stage('Compile') {
            steps {
                 echo 'This will Compile'
                 sh 'mvn clean compile'
            }
        }
		
		stage('Static Analyis Trigger') {
            steps {
                 echo 'This will Compile'
                 sh 'mvn clean package pmd:pmd checkstyle:checkstyle findbugs:findbugs '
            }
        }
		
		stage('Static Analyis Reporting') {
            steps {
                 echo 'This will Compile'
                recordIssues(tools: [checkStyle(), findBugs(useRankAsPriority: true), pmdParser()])
            }
        }
        
        stage('Integration Tests') {
            steps {
                echo 'This will test'
                 sh 'mvn test'
            }
        }  
        stage('Results') {
            steps {
                echo 'This will show Results'
                 junit '**/*.xml'
                 
            }
        }
        
        stage('Package') {
            steps {
                echo 'This will Package'
                 sh 'mvn package'
                 archiveArtifacts artifacts: '**/*.war', followSymlinks: false
            }
        }

		stage('Slack Notification') {
            steps {
               slackSend channel: 'cicd-training', message: 'For your information: Build Deploye:', teamDomain: 'jenkins-cicd-training', tokenCredentialId: 'Jenkins-Slack-token1'
           }
        }

    }
}
